@model Exam;

<link href="~/css/CenterDiv.css" rel="stylesheet" type="text/css" />

<div class="container">
    <div class="centered-div">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Sınav Güncelleme Ekranı</h3>
            </div>
            <form method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label class="col-md-3">Ders Adı</label>
                        <input autocomplete="off" asp-for="Class.ClassName" type="text" class="form-control" value="@Model.Class.ClassName" placeholder="Class.ClassName">
                        <span style="color:red" asp-validation-for="Class.ClassName"></span>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3">Sınav Açıklaması</label>
                        <input autocomplete="off" asp-for="Explanation" type="text" class="form-control" value="@Model.Explanation" placeholder="Explanation">
                        <span style="color:red" asp-validation-for="Explanation"></span>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3">Ders Kodu</label>
                        <input autocomplete="off" asp-for="Class.ClassCode" type="text" class="form-control" value="@Model.Class.ClassCode" placeholder="Class.ClassCode">
                        <span style="color:red" asp-validation-for="Class.ClassCode"></span>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Sınav Güncelle</button>
                    <button asp-area="Idare" asp-controller="Exam" asp-action="Index" class="btn btn-primary" style="float:right">Geri</button>
                </div>
            </form>
        </div>
    </div>
</div>